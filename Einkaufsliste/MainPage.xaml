<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModel="clr-namespace:Einkaufsliste.ViewModel"
             x:Class="Einkaufsliste.MainPage">
    
	<ContentPage.BindingContext>
		<ViewModel:EinkaufViewModel/>
	</ContentPage.BindingContext>
    
    <!--VIEW-->
    <StackLayout BackgroundColor="#212121">
        <StackLayout Orientation="Horizontal" BackgroundColor="Orange" Padding="8">
            <Label FontSize="20"
                   Padding="12"
                   TextColor="Black"
                   >Einkaufsliste </Label>
             <Button Text="Clear" Clicked="OnDelete" HorizontalOptions="EndAndExpand" BackgroundColor="#383838" TextColor="White" HeightRequest="30" WidthRequest="80" FontSize="12" CornerRadius="2"></Button>
        </StackLayout>
        <ListView x:Name="recipeListView"
                  ItemTapped="recipeListView_ItemTapped"
                  ItemSelected="recipeListView_ItemSelected"
                  SeparatorColor="#545454"
                  >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" TextColor="White"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackLayout Orientation="Horizontal"  Padding="8" BackgroundColor="Orange" >
            <Entry  x:Name="entry" Placeholder="Einkauf hinzufügen" WidthRequest="230" BackgroundColor="Orange" TextChanged="Entry_TextChanged" TextColor="Black" HorizontalOptions="CenterAndExpand" ></Entry>
            <Button Text="Add" Clicked="OnAdd" HorizontalOptions="EndAndExpand" BackgroundColor="#383838" TextColor="White" CornerRadius="2"></Button>
        </StackLayout>
    </StackLayout>

